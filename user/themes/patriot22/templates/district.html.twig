{% extends 'partials/base.html.twig' %}

{% block content %}
    <h1>{{ page.title }}</h1>
    

    <div class="places-grid">
        {% for place in page.collection() %}
            <article class="place-card">
                <a href="{{ place.url }}" class="place-link">
                    {% if place.media.images|first %}
                        <img src="{{ place.media.images|first.url }}" 
                             alt="{{ place.title }}" 
                             class="place-image">
                    {% else %}
                        <div class="placeholder-image">
                            <i class="fas fa-landmark"></i>
                        </div>
                    {% endif %}
                    <h3 class="place-title">{{ place.title }}</h3>
                </a>
            </article>
        {% else %}
            <p class="no-places">Памятники пока не добавлены</p>
        {% endfor %}
    </div>

    <style>
        .breadcrumbs {
            margin: 0 0 20px 0;
            color: #666;
        }
        
        .places-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
            margin-top: 30px;
        }
        
        .place-card {
            border: 1px solid #eee;
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
        }
        
        .place-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .place-link {
            text-decoration: none;
            color: #333;
        }
        
        .place-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        
        .placeholder-image {
            height: 200px;
            background: #f5f5f5;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ccc;
            font-size: 50px;
        }
        
        .place-title {
            padding: 15px;
            margin: 0;
            font-size: 18px;
        }
        
        .no-places {
            grid-column: 1 / -1;
            text-align: center;
            padding: 40px;
            color: #666;
        }
    </style>

    {% if config.plugins['lightcase'].enabled %}
        <script>
            // Инициализация Lightcase для галереи
            document.querySelectorAll('.place-image').forEach(img => {
                img.addEventListener('click', (e) => {
                    e.preventDefault();
                    jQuery(img).lightcase();
                });
            });
        </script>
    {% endif %}
{% endblock %}